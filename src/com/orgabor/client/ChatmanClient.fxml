<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:controller="com.orgabor.client.ClientController" xmlns="http://javafx.com/javafx/8.0.221" xmlns:fx="http://javafx.com/fxml/1"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="400.0">
   <center>
      <TextArea fx:id="chatTextArea" editable="false" prefHeight="325.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox prefHeight="75.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="messageField" prefHeight="25.0" prefWidth="350.0" promptText="Type here..." />
            <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="50.0" text="Send" 
            		onAction="#sendMessage"/>
         </children>
      </HBox>
   </bottom>
</BorderPane>
